<%include partials/header%>

<div class="ui main text container">
    <div class="ui huge header">Blog app</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%foundedBlogs.forEach(function(foundedBlog){%>
                <div class="item">
                    <div class="image">
                         <img src="<%=foundedBlog.image%>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=foundedBlog._id%>"><%=foundedBlog.title%></a>
                         <div class="meta">
                        <span><%=foundedBlog.created.toDateString()%></span>
                        </div>
                        <div class="description">
                        <p><%-foundedBlog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%=foundedBlog._id%>" class="ui floated basic blue button">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                   
                    
                    
                </div>
            <%})%>
        </div> 
    </div>
</div>




<%include partials/footer%>